<div class="event layout_upcoming{{ classUpcoming|default }}">

    <time datetime="{{ datetime }}" class="date">{{ date }}{% if time %} {{ time }}{% endif %}</time>
    <a href="{{ href|default }}" title="{{ title|default }} ({% if day|default %}{{ day }}, {% endif %}{{ date }} {% if time %} {{ time }}{% endif %})"{{ target }}>{{ link|default }}</a>

</div>

{#
    This template is used as an event list template by default, so we only add
    JSON-LD data in case this is an event without a reader
#}
{% if not hasReader %}
    {% do add_schema_org(getSchemaOrgData.invoke()) %}
{% endif %}
