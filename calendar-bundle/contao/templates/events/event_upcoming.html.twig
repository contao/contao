
<div class="event layout_upcoming{{ classUpcoming }}">

  <time datetime="{{ datetime }}" class="date">{{ date }}{% if time %} {{ time }}{% endif %}</time>
  <a href="{{ href }}" title="{{ title }} ({% if day %}{{ day }}, {% endif %}{{ date }} {% if time %} {{ time }}{% endif %})"{{ target }}>{{ link }}</a>

</div>

