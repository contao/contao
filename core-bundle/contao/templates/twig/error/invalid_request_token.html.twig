{% trans_default_domain "contao_exception" %}
{% extends "@Contao/error/_layout.html.twig" %}

{% block title %}
    {{ 'XPT.requestToken'|trans }}
{% endblock %}

{% block matter %}
    <p>{{ 'XPT.invalidToken'|trans }}</p>
{% endblock %}

{% block howToFix %}
    <p><a href="javascript:window.location.href=window.location.href" class="button">{{ 'XPT.tokenReload'|trans }}</a></p>
    <p>{{ 'XPT.tokenRetry'|trans|raw }}</p>
{% endblock %}

{% block explain %}
    <p>{{ 'XPT.tokenExplainOne'|trans|raw }}</p>
    <p>{{ 'XPT.tokenExplainTwo'|trans(['https://to.contao.org/support'])|raw }}</p>
{% endblock %}
