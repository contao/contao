{% extends '@Contao/block_searchable.html.twig' %}

{% block content %}

    {% if previews %}
        {% for preview in previews %}
            {{ include('@Contao/image.html.twig', preview.getLegacyTemplateData(), with_context: false) }}
        {% endfor %}
    {% endif %}

    <p class="download-element ext-{{ extension }}">
        <a href="{{ href }}" title="{{ title|insert_tag }}" type="{{ mime }}">{{ link|insert_tag }} <span class="size">({{ filesize }})</span></a>
    </p>

{% endblock %}
