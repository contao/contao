{# Show a dialog #}
{% embed "@Contao/backend/file_manager/show_modal.stream.html.twig" %}
    {% trans_default_domain "contao_file_manager" %}

    {% block title %}{{ 'dialog.elements_rename.title'|trans([num_elements]) }}{% endblock %}

    {% block content %}
        <div class="description">
            {% set placeholder_token -%}
                <span class="token">#</span>
            {%- endset %}

            {{ ('dialog.elements_rename.description_' ~ (multiple ? 'multiple' : 'single'))|trans([placeholder_token])|raw }}
        </div>

        <div class="widget name_container">
            <h3>
                <label for="ctrl_name">
                    <span class="invisible">{{ 'MSC.mandatory'|trans(domain: 'contao_default') }}</span>
                    {{ 'MSC.name'|trans(domain: 'contao_default') }}
                    <span class="mandatory">*</span>
                </label>
            </h3>
            <div class="structure">
                {% set name_input_attributes = attrs()
                    .set('type', 'text')
                    .set('id', 'ctrl_name')
                    .set('name', 'name')
                    .setIfExists('pattern', allowed_name_pattern)
                    .set('value', suggested_name)
                    .set('required')
                %}
                <input{{ name_input_attributes }}>

                {% if extensions is not null %}
                    <span class="extension">.{{ extensions|join('|') }}</span>
                {% endif %}
            </div>
        </div>

        {% if multiple %}
            <div class="widget">
                <h3>
                    <label for="ctrl_start_with">
                        {{ 'dialog.elements_rename.start_with'|trans }}
                    </label>
                </h3>
                <input type="number" min="0" value="1" id="ctrl_start_with" name="start_with">
            </div>
        {% endif %}
    {% endblock %}

    {% block buttons %}
        {{ parent() }}
        <button class="confirm">{{ 'MSC.apply'|trans(domain: 'contao_default') }}</button>
    {% endblock %}
{% endembed %}
