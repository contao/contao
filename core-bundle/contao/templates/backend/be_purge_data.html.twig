
<div id="tl_maintenance_cache" class="maintenance_{{ isActive ? 'active' : 'inactive' }}">

  <h2 class="sub_headline sub_headline_purge">{{ headline }}</h2>

  {% if message %}
    <div class="tl_message">
      {{ message }}
    </div>
  {% endif %}

  <form class="tl_form" method="post">
    <div class="tl_formbody_edit">
      <input type="hidden" name="FORM_SUBMIT" value="tl_purge">
      <input type="hidden" name="REQUEST_TOKEN" value="{{ request_token }}">
      <div class="tl_tbox">
        <fieldset class="tl_checkbox_container">
          <table class="with-border with-padding">
          <thead>
            <tr>
              <th><input type="checkbox" id="check_all" class="tl_checkbox" onclick="Backend.toggleCheckboxes(this, 'purge')"></th>
              <th>{{ job }}</th>
              <th>{{ description }}</th>
            </tr>
          </thead>
          <tbody>
            {% for value, job in jobs %}
              <tr class="hover-row toggle_select">
                <td><input type="checkbox" name="purge[{{ job.group }}][]" id="{{ job.id }}" class="tl_checkbox" value="{{ value }}" data-action="focus->contao--scroll-offset#store"></td>
                <td class="nw"><label for="{{ job.id }}">{{ job.title }}</label>{{ job.affected }}</td>
                <td>{{ job.description }}</td>
              </tr>
            {% endfor %}
          </tbody>
          </table>
        </fieldset>
        {% if help %}
          <p class="tl_help tl_tip">{{ help }}</p>
        {% endif %}
      </div>
    </div>
    <div class="tl_submit_container">
      <button type="submit" name="clear" class="tl_submit">{{ submit }}</button>
    </div>
  </form>

</div>
