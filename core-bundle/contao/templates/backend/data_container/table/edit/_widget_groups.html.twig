{% block widget_groups_tree %}
    {% for key, node in root %}
        {% if node is iterable %}
            <div id="{{ key }}" class="subpal widget-group">
                {% with {root: node} %}{{ block('widget_groups_tree') }}{% endwith %}
            </div>
        {% else %}
            {{ node|raw }}
        {% endif %}
    {% endfor %}
{% endblock %}
