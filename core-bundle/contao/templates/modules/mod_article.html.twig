{% set wrapperAttributes = attrs(cssID)
    .addClass([class, 'block'])
    .addStyle(style|default)
    .mergeWith(wrapperAttributes|default)
 %}

{% if teaserOnly %}

  {% block alias %}
    <article{{ wrapperAttributes }}>
      <div class="ce_text block">
        <h2>{{ headline }}</h2>
        <div class="teaser">
          {% do cspInlineStyles(teaser) %}
          <p class="more"><a href="{{ href }}" title="{{ readMore }}">{{ more }} <span class="invisible">{{ headline }}</span></a></p>
        </div>
      </div>
    </article>
  {% endblock %}

{% elseif noMarkup %}

  {% block content %}
      {{ elements|join }}
  {% endblock %}

{% else %}

  <div{{ wrapperAttributes }}>
    {% if printable %}
      {% block syndication %}
        <!-- indexer::stop -->
        <div class="syndication">
          {% if printButton %}
            <a href="{{ print }}" class="print" title="{{ printTitle }}" onclick="window.print();return false" data-skip-search-index>{{ contao_backend('assets/contao/images/print.svg') }}</a>
          {% endif %}
          {% if facebookButton %}
            <a href="{{ path('contao_frontend_share', ['p' => 'facebook', 'u' => encUrl]) }}" class="facebook" rel="nofollow" title="{{ facebookTitle }}" onclick="var w=window.open(this.href,'','width=640,height=380,modal=yes,left=100,top=50,location=no,menubar=no,resizable=yes,scrollbars=yes,status=no,toolbar=no');w.opener=null;return false">{{ contao_backend('assets/contao/images/facebook.svg') }}</a>
          {% endif %}
          {% if twitterButton %}
            <a href="{{ path('contao_frontend_share', ['p' => 'twitter', 'u' => encUrl, 't' => encTitle]) }}" class="twitter" rel="nofollow" title="{{ twitterTitle }}" onclick="var w=window.open(this.href,'','width=640,height=380,modal=yes,left=100,top=50,location=no,menubar=no,resizable=yes,scrollbars=yes,status=no,toolbar=no');w.opener=null;return false">{{ contao_backend('assets/contao/images/twitter.svg') }}</a>
          {% endif %}
        </div>
        <!-- indexer::continue -->
      {% endblock %}
    {% endif %}

    {% block content %}
      {{ elements|join }}
    {% endblock %}

    {% if backlink %}
      {% block backlink %}
        <!-- indexer::stop -->
        <p class="back"><a href="{{ backlink }}" title="{{ back }}">{{ back }}</a></p>
        <!-- indexer::continue -->
      {% endblock %}
    {% endif %}
  </div>

{% endif %}
