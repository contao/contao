/* Main */
#main {
    width: calc(100% - var(--navigation-width));
    display: flex;
    flex-direction: column;
    position: relative;

    .content {
        margin: 0 15px 15px;
    }

    .content:not(:has(.content-filter)),
    .content-inner,
    .content-filter {
        background: var(--content-bg);
        border: 1px solid var(--content-border);
        border-radius: calc(var(--border-radius) * 2);
    }

    .content:has(.tl_formbody_submit),
    .content-inner,
    .content-filter {
        overflow: clip;
    }
}

.popup #main {
    .content {
        height: auto;
        margin: 0;
        border: 0;
        border-radius: 0;
    }

    .content-inner {
        border: none;
    }
}

@media (width < 1280px) {
    #main {
        .content-filter {
            border-width: 0 0 0 1px;
            border-radius: 0;
        }
    }
}

@media (min-width: 1280px) {
    #main {
        .content-inner, .content-filter {
            border-radius: calc(var(--border-radius) * 3);
        }

        .content:has(>.content-filter),
        .content > .tree-view:has(>.content-filter) {
            display: grid;
            align-items: start;
            column-gap: var(--main-panel-gap, 10px);
            grid-template-columns: calc(100% - var(--main-panel-gap, 10px) - var(--filter-width, 240px)) var(--filter-width, 240px);
            min-height: 100%;

            &:has(>.operations, > #picker-menu) {
                grid-template-rows: auto 1fr;
                grid-template-areas: "top top"
                                     "listing filter";

                > *:not(.content-filter, .operations) {
                    grid-area: listing;
                }

                > .content-filter {
                    grid-area: filter;
                }

                > .operations, > #picker-menu {
                    grid-area: top;
                }
            }
        }
    }
}
