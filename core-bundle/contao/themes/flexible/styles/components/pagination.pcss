.pagination {
    display: flow-root;
    background: var(--panel-bg);
    margin-bottom: 18px;
    border: solid var(--border);
    border-width: 1px 0;
    padding: 12px 15px;
}

.pagination ul {
    width: 60%;
    float: right;
    text-align: right;
}

.pagination p {
    width: 30%;
    float: left;
    margin-bottom: 0;
}

.pagination li {
    display: inline;
    padding-left: 3px;
}

.pagination .active {
    color: var(--gray);
}

.pagination-lp {
    margin-bottom: 0;
    border-bottom: 0;
    padding: 15px 12px;
}
