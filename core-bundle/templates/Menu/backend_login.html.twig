{% extends '@KnpMenu/menu.html.twig' %}

{% block item %}
    {% if item.extras.icon|default %}
        <style>
            :root {
                --icon-{{ item.name }}: url({{ item.extras.icon }});
            }

            {% if item.extras.icon_dark|default %}
                html[data-color-scheme="dark"] {
                    --icon-{{ item.name }}: url({{ item.extras.icon_dark }});
                }
            {% endif %}

            .login-providers .{{ item.name}} .has-icon:before {
                background-image: var(--icon-{{ item.name }});
            }
        </style>
    {% endif %}

    {{ parent() }}
{% endblock %}
