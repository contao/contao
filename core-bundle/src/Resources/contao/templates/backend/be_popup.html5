<!DOCTYPE html>
<html lang="<?= $this->language ?>">
<head>

  <meta charset="<?= $this->charset ?>">
  <title><?= $this->title ?> - Contao Open Source CMS <?= VERSION ?></title>
  <base href="<?= $this->base ?>">
  <meta name="generator" content="Contao Open Source CMS">
  <meta name="viewport" content="width=device-width,initial-scale=1.0,shrink-to-fit=no">
  <meta name="referrer" content="origin">

  <link rel="stylesheet" href="<?= TL_ASSETS_URL ?>system/themes/<?= $this->theme ?>/fonts.css">
  <link rel="stylesheet" href="<?= TL_ASSETS_URL ?>system/themes/<?= $this->theme ?>/basic.css">
  <link rel="stylesheet" href="<?= TL_ASSETS_URL ?>system/themes/<?= $this->theme ?>/popup.css">
  <?= $this->stylesheets ?>

  <script><?= $this->getLocaleString() ?></script>
  <script src="<?= TL_ASSETS_URL ?>assets/mootools/js/mootools.min.js"></script>
  <script src="<?= TL_ASSETS_URL ?>bundles/contaocore/mootao.min.js"></script>
  <script src="<?= TL_ASSETS_URL ?>bundles/contaocore/core.min.js"></script>
  <script><?= $this->getDateString() ?></script>
  <?= $this->javascripts ?>

</head>
<body class="<?= $this->ua ?> popup">

  <div id="container" class="cf">
    <div id="main">
      <table class="tl_help_table">
        <tr>
          <td class="tl_label"><?= $this->label_ctime ?>:</td>
          <td><?= $this->ctime ?></td>
        </tr>
        <tr>
          <td class="tl_label"><?= $this->label_mtime ?>:</td>
          <td><?= $this->mtime ?></td>
        </tr>
        <tr>
          <td class="tl_label"><?= $this->label_atime ?>:</td>
          <td><?= $this->atime ?></td>
        </tr>
        <tr>
          <td class="tl_label"><?= $this->label_path ?>:</td>
          <td><?= $this->path ?></td>
        </tr>
        <?php if ($this->uuid): ?>
          <tr>
            <td class="tl_label"><?= $this->label_uuid ?>:</td>
            <td><?= $this->uuid ?></td>
          </tr>
        <?php endif; ?>
        <?php if ($this->filesize): ?>
          <tr>
            <td class="tl_label"><?= $this->label_filesize ?>:</td>
            <td><?= $this->filesize ?></td>
          </tr>
        <?php endif; ?>
        <?php if ($this->src): ?>
          <tr>
            <td class="tl_label"><?= $this->label_imagesize ?>:</td>
            <?php if ($this->width && $this->height): ?>
              <td><?= $this->width ?> x <?= $this->height ?></td>
            <?php else: ?>
              <td>-</td>
            <?php endif; ?>
          </tr>
        <?php endif; ?>
      </table>
      <?php if ($this->href): ?>
        <div id="download">
          <a href="<?= $this->href ?>" download="<?= basename($this->path) ?>"><?= Image::getHtml($this->icon, '', 'class="mime_icon"') ?> <?= $this->download ?></a>
        </div>
      <?php endif; ?>
      <?php if ($this->isImage): ?>
        <div id="preview">
          <div class="checkerbox" style="width:<?= $this->width ?>px;height:<?= $this->height ?>px">
            <img src="<?= $this->dataUri ?>" width="<?= $this->width ?>" height="<?= $this->height ?>" alt="">
          </div>
        </div>
      <?php endif; ?>
    </div>
  </div>

</body>
</html>