  <link rel="stylesheet" href="<?= TL_ASSETS_URL ?>system/themes/<?= $this->theme ?>/diff.css">
  <?= $this->stylesheets ?>

  <script><?= $this->getLocaleString() ?></script>
  <script src="<?= TL_ASSETS_URL ?>assets/mootools/js/mootools.min.js"></script>
  <?= $this->javascripts ?>

