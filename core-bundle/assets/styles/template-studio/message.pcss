@keyframes toast {
    0% {
        transform: translateY(-2em);
        opacity: 0;
    }
    10% {
        transform: translateY(0);
        opacity: 1;
    }
    90% {
        transform: translateY(0);
        opacity: 1;
    }
    100% {
        transform: translateY(-2em);
        opacity: 0;
        display: none;
    }
}

#template-studio--message {
    position: absolute;
    top: .5em;
    left: 0;
    right: 0;

    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 1em;
    z-index: 110;
    pointer-events: none;

    .message {
        position: relative;
        animation: toast forwards 5s;
        margin: 0 auto;
        max-width: 32em;
        overflow-wrap: anywhere;
        border: 1px solid var(--border);
        border-radius: 6px;
        padding: 1em 1em 1em 2.5em;
        box-shadow: rgba(0, 0, 0, .2) 3px 3px 10px;

        background-repeat: no-repeat;
        background-position: .8em center;
        background-color: var(--content-bg);

        &:before {
            display: block;
            content: '';
            position: absolute;
            inset: 0;
        }

        &.message--info {
            background-image: url("../../../contao/themes/flexible/icons/ok.svg");
            color: var(--green);

            &:before {
                background: var(--confirm-bg);
            }
        }

        &.message--error {
            background-image: url("../../../contao/themes/flexible/icons/error.svg");
            color: var(--red);

            &:before {
                background: var(--error-bg);
            }

            /* Show errors for a longer time */
            animation-duration: 10s;
        }
    }
}
