{
    "name": "contao/news-bundle",
    "type": "symfony-bundle",
    "description": "Contao 4 news bundle",
    "license": "LGPL-3.0+",
    "authors": [
        {
            "name": "Leo Feyer",
            "homepage": "https://github.com/leofeyer"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "symfony/framework-bundle": "^2.7.7",
        "contao/core-bundle": "dev-release/4.1.0 as 4.1.0"
    },
    "require-dev": {
        "fabpot/php-cs-fixer": "~1.8",
        "phpunit/phpunit": "~4.5",
        "satooshi/php-coveralls": "~0.6",
        "symfony/phpunit-bridge": "~2.7"
    },
    "conflict": {
        "contao/core": "*"
    },
    "autoload": {
        "psr-4": {
            "Contao\\NewsBundle\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "4.2.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
