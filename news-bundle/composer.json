{
    "name": "contao/news-bundle",
    "type": "contao-bundle",
    "description": "Contao 4 news bundle",
    "license": "LGPL-3.0+",
    "authors": [
        {
            "name": "Leo Feyer",
            "homepage": "https://github.com/leofeyer"
        }
    ],
    "require": {
        "php": ">=5.6.0",
        "symfony/framework-bundle": "^3.2",
        "contao/core-bundle": "^4.3.3"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0",
        "friendsofphp/php-cs-fixer": "^2.0",
        "phpunit/phpunit": "^4.5",
        "satooshi/php-coveralls": "^1.0",
        "symfony/phpunit-bridge": "^3.2"
    },
    "conflict": {
        "contao/core": "*",
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "autoload": {
        "psr-4": {
            "Contao\\NewsBundle\\": "src/"
        },
        "classmap": [
            "src/Resources/contao/"
        ],
        "exclude-from-classmap": [
            "tests/",
            "src/Resources/contao/config/",
            "src/Resources/contao/dca/",
            "src/Resources/contao/languages/",
            "src/Resources/contao/templates/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Contao\\NewsBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist"
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "4.4.x-dev"
        },
        "contao-manager-plugin": "Contao\\NewsBundle\\ContaoManager\\Plugin"
    }
}
