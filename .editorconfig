# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{pcss,php,twig,yaml,yml}]
indent_style = space
indent_size = 4

[*.{svg,min.css,min.js}]
insert_final_newline = false

[*/contao/**.{css,js,php}]
indent_style = tab

[*/contao/**.{html5,xlf}]
indent_style = space
indent_size = 2

[core-bundle/assets/scripts/{core,mootao}.js]
indent_style = tab
